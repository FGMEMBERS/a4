<?xml version="1.0"?>
<!--
************************************************************************
Douglas A4 Skyhawk simulation config. This files ties together
all the components used by FGFS to represent the A4. Components include
the flight data model, instrument panel, and external 3D model.

************************************************************************
-->

<PropertyList>
	<sim>

		<description>Douglas A4F Skyhawk (YASim)</description>
		<author>Lewis Magruder, Dean Baunton, Jim Wilson, Andy Ross, Vivian Meazza, Stuart Buchanan</author>
		<status>early-production</status>

		<virtual-cockpit archive="y">true</virtual-cockpit>

		<flight-model>yasim</flight-model>
		<aero>a4f</aero>
		<fuel-fraction>0.5</fuel-fraction>

		<systems>

			<!--   <autopilot>
    <path>Aircraft/KC135/Systems/autopilot.xml</path>
   </autopilot>-->

			<electrical>
				<path>Aircraft/a4/Systems/electrical.xml</path>
			</electrical>
		</systems>

		<sound>
			<path>Aircraft/a4/a4-sound.xml</path>
		</sound>

		<panel>
			<visibility>false</visibility>
		</panel>

		<instrumentation>
			<path>Aircraft/a4/Systems/instrumentation.xml</path>
		</instrumentation>

		<model>
			<path>Aircraft/a4/Models/a4f.xml</path>
		</model>

		<startup>
			<splash-texture>Aircraft/a4/splash.png</splash-texture>
		</startup>

		<submodels>
			<serviceable type="bool">true</serviceable>
			<path>Aircraft/a4/Models/Submodels/a4f-submodels.xml</path>
		</submodels>

		<view n="0">
			<internal archive="y">true</internal>
			<config>
				<x-offset-m archive="y">0.00</x-offset-m>
				<y-offset-m archive="y">0.9</y-offset-m>
				<z-offset-m archive="y">-2.35</z-offset-m>
				<pitch-offset-deg>-10</pitch-offset-deg>
				<!-- <default-field-of-view-deg>60</default-field-of-view-deg> -->
			</config>
		</view>

		<view n="1">
			<internal archive="y">false</internal>
			<config>
				<z-offset-m archive="y">10.00</z-offset-m>
			</config>
		</view>

		<view n="2">
			<internal archive="y">false</internal>
			<config>
				<z-offset-m archive="y">10.00</z-offset-m>
			</config>
		</view>

		<view n="3">
			<internal archive="y">false</internal>
			<config>
				<z-offset-m archive="y">10.00</z-offset-m>
			</config>
		</view>

		<view n="4">
			<internal archive="y">false</internal>
			<config>
				<z-offset-m archive="y">10.00</z-offset-m>
			</config>
		</view>

		<current-view>
			<field-of-view>60.0</field-of-view>
		</current-view>

		<aoa-indexer>
			<too-slow-deg>12.5</too-slow-deg>
			<slow-deg>11.5</slow-deg>
			<fast-deg>9.5</fast-deg>
			<too-fast-deg>8.5</too-fast-deg>
		</aoa-indexer>

		<hud>
			<enable3d>false</enable3d>
		</hud>

		<weight n="0">
			<name>Left Outboard</name>
			<weight-lb>0</weight-lb>
			<max-lb>1000</max-lb>
		</weight>
		<weight n="1">
			<name>Left Inboard</name>
			<!-- 3 Mk 82 bombs + TER mount-->
			<weight-lb>1644</weight-lb>
			<max-lb>2250</max-lb>
		</weight>
		<weight n="2">
			<name>Center Pylon</name>
			<!-- 300 gallon droptank. Fuel weight handled separately -->
			<weight-lb>207</weight-lb>
			<max-lb>3500</max-lb>
		</weight>
		<weight n="3">
		<name>Right Inboard</name>
			<!-- 3 Mk 82 bombs + TER mount-->
			<weight-lb>1644</weight-lb>
			<max-lb>2250</max-lb>
		</weight>
		<weight n="4">
			<name>Right Outboard</name>
			<weight-lb>0</weight-lb>
			<max-lb>1000</max-lb>
		</weight>

		<checklists include="a4f-checklists.xml"/>

		<help>
			<title>Douglas A4F Skyhawk</title>
			<line>See Help-Checklists for checklists</line>			
			<line>STORES</line>
			<line>- Colt Mk 12 Cannon</line>
			<line>- LAU68 Rockets (stations 1 and 5)</line>
			<line>- Mk 82 Bombs (stations 2 and 4)</line>
			<line>- 300 gallon drop tank (station 3)</line>

			<key>
				<name>a</name>
 				<desc>Toggle Approach Power Compensator</desc>
			</key>
			<key>
				<name>b</name>
				<desc>Trigger bomb</desc>
			</key>
			<key>
				<name>C</name>
				<desc>catapult launch command</desc>
			</key>
			<key>
				<name>L</name>
				<desc>carrier launch-bar engage</desc>
			</key>
			<key>
				<name>o/O</name>
				<desc>hook up/down</desc>
			</key>
			<key>
				<name>CTRL B</name>
				<desc>toggle airbrakes</desc>
			</key>
			<key>
				<name>k/j</name>
				<desc>Arm/Disarm auto-deploy spoilers</desc>
			</key>
			<key>
				<name>u/U</name>
				<desc>Seat up/down</desc>
			</key>
			<key>
				<name>Ctrl-u</name>
				<desc>Seat reset</desc>
			</key>
		</help>

	</sim>

	<autopilot>
		<config>
			<min-climb-speed-kt type="float">200.0</min-climb-speed-kt>
			<best-climb-speed-kt type="float">300.0</best-climb-speed-kt>
			<target-climb-rate-fpm type="float">3000.0</target-climb-rate-fpm>
			<target-descent-rate-fpm type="float">1500.0</target-descent-rate-fpm>
			<elevator-adj-factor type="float">5500.0</elevator-adj-factor>
			<integral-contribution type="float">0.007</integral-contribution>
			<zero-pitch-throttle type="float">0.60</zero-pitch-throttle>
			<zero-pitch-trim-full-throttle type="float">0.14</zero-pitch-trim-full-throttle>
			<max-roll-deg type="float">45</max-roll-deg>
			<max-aileron type="float">0.15</max-aileron>
		</config>
	</autopilot>

	<consumables>
		<fuel>
			<tank n="0">
				<name>Center</name>
				<level-gal_us>280</level-gal_us>
			</tank>
			<tank n="1">
				<name>Left Wing</name>
				<level-gal_us>260</level-gal_us>
			</tank>
			<tank n="2">
				<name>Right Wing</name>
				<level-gal_us>260</level-gal_us>
			</tank>
			<tank n="3">
				<name>Center Drop Tank</name>
				<level-gal_us>300</level-gal_us>
			</tank>

<!-- Left and right droptanks not used in current configuration
			<tank n="4">
				<name>Left Drop Tank</name>
				<level-gal_us>300</level-gal_us>
			</tank>
			<tank n="5">
				<name>Right Drop Tank</name>
				<level-gal_us>300</level-gal_us>
			</tank>
-->
		</fuel>
	</consumables>

	<systems>
		<refuel>
			<type>probe</type>
		</refuel>
	</systems>

	<!-- *************** set properties **********************-->
	<controls>
		<engines>
			<engine>
				<throttle>0</throttle>
				<apc type="bool">0</apc>
			</engine>
		</engines>
		<flight>
			<speedbrake type="bool">0</speedbrake>
			<spoilers-armed type="bool">0</spoilers-armed>
		</flight>
		<instrumentation>
		  <bhdi-mode type="int">0</bhdi-mode>
		  <drift-indicator-mode type="int">0</drift-indicator-mode>
		  <ins>
		    <!-- Inertial Navigation System -->
		    <mode type="int">0</mode>
		    <magvar-deg type="float">-3.0</magvar-deg>
		    <wind-speed-kts type="int">0</wind-speed-kts>
		    <wind-dir-deg type="int">0</wind-dir-deg>
		    <current-destination>
		      <latitude-deg>-34.67</latitude-deg>
		      <longitude-deg>-117.67</longitude-deg>
        </current-destination>
        <d1>
		      <latitude-deg>-34.67</latitude-deg>
		      <longitude-deg>-117.67</longitude-deg>
        </d1>
        <d2>
		      <latitude-deg>-34.67</latitude-deg>
		      <longitude-deg>-117.67</longitude-deg>
        </d2>
        <set-course-deg>0.0</set-course-deg>
        <set-dist-nm>0.0</set-dist-nm>
      </ins>
      
      <uhf>
        <preset-channel type="int">0</preset-channel>
        <freq-select type="int">0</freq-select>
        <mode type="int">0</mode>
        <preset-channels>
          <channel n="0">120.500</channel>
          <channel n="1">118.850</channel>
          <channel n="2">118.300</channel>
          <channel n="3">133.775</channel>
          <channel n="4">133.775</channel>
          <channel n="5">133.775</channel>
          <channel n="6">133.775</channel>
          <channel n="7">133.775</channel>
          <channel n="8">133.775</channel>
          <channel n="9">133.775</channel>
          <channel n="10">133.775</channel>
          <channel n="11">133.775</channel>
          <channel n="12">133.775</channel>
          <channel n="13">133.775</channel>
          <channel n="14">133.775</channel>
          <channel n="15">133.775</channel>
          <channel n="16">133.775</channel>
          <channel n="17">133.775</channel>
          <channel n="18">133.775</channel>
          <channel n="19">133.775</channel>        
        </preset-channels>
      </uhf>
      <tacan-mode type="int">0</tacan-mode>		  
    </instrumentation>
    <radar>
      <mode type="int">0</mode>
      <orientation type="int">1</orientation>
      <range type="int">10</range>
      <reticle-norm>0.5</reticle-norm>
      <brightness-norm>0.4</brightness-norm>
    </radar>
    <steering>
      <steering-power type="bool">0</steering-power>
    </steering>
	</controls>
	
	<instrumentation>
	  <ins>
      <set-course-deg>0.0</set-course-deg>
      <set-dist-nm type="int">0</set-dist-nm>
	  </ins>	
	</instrumentation>


	<input>
		<keyboard include="../../Input/Keyboard/carrier-bindings.xml">
			<key n="97">
				<name>a</name>
				<desc>Toggle APC</desc>
				<binding>
					<command>property-toggle</command>
					<property>/controls/engines/engine[0]/apc</property>
				</binding>
			</key>

			<key n="98">
				<name>b</name>
				<desc>Trigger Bomb</desc>
				<binding>
					<command>property-toggle</command>
					<property>/controls/armament/bomb</property>
				</binding>
			</key>

			<!-- map keys for seat vertical adjust -->
			<key n="21">
				<name>CTRL-U</name>
				<desc>Seat Default.</desc>
				<binding>
					<command>property-assign</command>
					<property>/controls/seat/vertical-adjust</property>
					<value type="double">0</value>
				</binding>
				<binding>
					<condition>
						<equals>
							<property>sim/current-view/view-number</property>
							<value>0</value>
						</equals>
					</condition>
					<command>property-assign</command>
					<property>sim/current-view/y-offset-m</property>
					<value type="double">0.9</value>
				</binding>
			</key>

			<key n="85">
				<name>U</name>
				<desc>Seat Down.</desc>
				<binding>
					<command>property-adjust</command>
					<property>/controls/seat/vertical-adjust</property>
					<step type="double">-0.01</step>
					<min type="double">-0.05</min>
					<max type="double">0.05</max>
				</binding>
				<binding>
					<condition>
						<equals>
							<property>sim/current-view/view-number</property>
							<value>0</value>
						</equals>
					</condition>
					<command>property-adjust</command>
					<property>sim/current-view/y-offset-m</property>
					<step type="double">-0.01</step>
					<min type="double">0.85</min>
					<max type="double">0.95</max>
				</binding>
			</key>

			<key n="117">
				<name>u</name>
				<desc>Seat Up.</desc>
				<binding>
					<command>property-adjust</command>
					<property>controls/seat/vertical-adjust</property>
					<step type="double">0.01</step>
					<min type="double">-0.05</min>
					<max type="double">0.05</max>
				</binding>
				<binding>
					<condition>
						<equals>
							<property>sim/current-view/view-number</property>
							<value>0</value>
						</equals>
					</condition>
					<command>property-adjust</command>
					<property>sim/current-view/y-offset-m</property>
					<step type="double">0.01</step>
					<min type="double">0.85</min>
					<max type="double">0.95</max>
				</binding>
			</key>

		</keyboard>
	</input>

	<!-- weights -->
	<yasim>
		<weights>
			<pilot-lb type="double">200</pilot-lb>
			<drag-chute type="double">0</drag-chute>
		</weights>
	</yasim>

	<nasal>
    <radar>
      <file>Aircraft/a4/Nasal/radar.nas</file>
    </radar>    
    <a4_instruments>
      <file>Aircraft/a4/Nasal/instruments.nas</file>
    </a4_instruments>
		<a4>
			<file>Aircraft/a4/Models/a4.nas</file>
		</a4>
		<a4-fuel>
			<file>Aircraft/Generic/aar.nas</file>
		</a4-fuel>
		<nav-display>
			<file>Aircraft/a4/Models/radar.nas</file>
		</nav-display>
		<chronograph>
			<file>Aircraft/Instruments-3d/chronograph/chronograph.nas</file>
		</chronograph>		
	</nasal>
</PropertyList>



