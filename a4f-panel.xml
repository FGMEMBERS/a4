<?xml version="1.0"?>
<!DOCTYPE PropertyList SYSTEM "panel.dtd">
<PropertyList>

 <name>A4 Panel</name>
 <background>Aircraft/a4/transparent-bg.rgb</background>
 <w>1024</w>
 <h>580</h>
 <y-offset>0</y-offset>
 <view-height>450</view-height>

 <instruments>

 <instrument include="../Instruments/clock.xml">
   <name>Chronometer</name>
   <x>200</x>
   <y>520</y>
   <w>90</w>
   <h>90</h>
  </instrument>

  <instrument include="../Instruments/aoa.xml">
   <name>Angle of Attack</name>
   <x>680</x>
   <y>520</y>
   <w>110</w>
   <h>110</h>
  </instrument>

  <instrument include="../Instruments/accel.xml">
   <name>G meter</name>
   <x>795</x>
   <y>520</y>
   <w>110</w>
   <h>110</h>
  </instrument>

  <instrument include="../Instruments/asi-590-knot-a4c.xml">
   <name>Airspeed Indicator</name>
   <x>165</x>
   <y>380</y>
   <w>145</w>
   <h>145</h>
  </instrument>
  
  <instrument include="fuel-gauge.xml">
   <name>Fuel Gauge</name>
   <x>875</x>
   <y>280</y>
   <w>110</w>
   <h>110</h>
  </instrument>

  <!-- Taken out, to make room for the 3D attitude ball -->

  <!--<instrument include="../Instruments/altimeter.xml">-->
	<instrument include="/Instruments/T38-altimeter.xml">
   <name>Altimeter</name>
   <x>160</x>
   <y>220</y>
   <w>150</w>
   <h>150</h>
  </instrument>
	
	
   
   <instrument include="../Instruments/vertical-speed-6kfpm.xml">
   <name>Vertical Speed Indicator</name>
   <x>360</x>
   <y>520</y>
   <w>100</w>
   <h>100</h>
  </instrument>

  <instrument include="../Instruments/hsi.xml">
   <name>Horizontal Situation Indicator</name>
   <x>640</x>
   <y>50</y>
   <w>140</w>
   <h>140</h>
  </instrument>

  

  <instrument include="../Instruments/n1.xml">
   <name>Engine Tachometer</name>
   <x>865</x>
   <y>400</y>
   <w>110</w>
   <h>110</h>
  </instrument>

  <instrument include="../Instruments/gear-indicator.xml">
   <name>Gear Indicator Light</name>
   <x>275</x>
   <y>530</y>
   <w>40</w>
   <h>17</h>
  </instrument>
  
  <instrument include="../Instruments/brakes.xml">
   <name>Brake Indicator Light</name>
   <x>275</x>
   <y>500</y>
   <w>40</w>
   <h>17</h>
  </instrument>

  <instrument include="../Instruments/throttle-knob.xml">
   <name>Throttle quadrant</name>
   <x>10</x>
   <y>40</y>
  </instrument>

  <instrument include="../Instruments/flap.xml">
   <name>Flaps Control</name>
   <x>10</x>
   <y>150</y>
   <w>50</w>
   <h>75</h>
  </instrument>

   <instrument include="/Instruments/refuel.xml">
     <name>Refuel Contact Light</name>
     <x>900</x>
     <y>280</y>
     <w>20</w>
     <h>20</h>
   </instrument>

   <instrument include="/Instruments/nav_display.xml">
     <name>Radar</name>
     <condition>
       <equals>
         <property>instrumentation/radar/minimized</property>
         <value>false</value>
       </equals>
     </condition>
     <x>665</x>
     <y>300</y>
     <w>275</w>
     <h>275</h>
   </instrument>

   <instrument include="../Instruments/radar-minimized.xml">
     <name>Radar-minimized</name>
     <condition>
       <equals>
         <property>instrumentation/radar/minimized</property>
         <value>true</value>
       </equals>
     </condition>
     <x>850</x>
     <y>132</y>
     <w>44</w>
     <h>16</h>
   </instrument>
 </instruments>

</PropertyList>



