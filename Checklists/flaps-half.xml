<?xml version="1.0"?>
<!-- Flaps at half -->
<PropertyList>
	<condition>
		<and>
			<greater-than>
				<property>/controls/flight/flaps</property>
				<value>0.4</value>
			</greater-than>
			<less-than>
				<property>/controls/flight/flaps</property>
				<value>0.6</value>
			</less-than>
		</and>
	</condition>
	<binding>
		<command>property-assign</command>
		<property>/controls/flight/flaps</property>
		<value>0.5</value>
	</binding>
	<marker>
		<x-m>2.8100</x-m>
		<y-m>-0.2433</y-m>
		<z-m>0.6342</z-m>
		<scale>1.5167</scale>
	</marker>
</PropertyList>
