<?xml version="1.0"?>
<PropertyList>

  <path>a4f-panel-rh.ac</path>
  
  <!-- Overall rotation.  This allows us to have all our own
  animations along sensible axes -->
  
  <animation>
    <type>rotate</type>
    <offset-deg>6.2</offset-deg>
    <axis>
      <x>0</x><y>1</y><z>0</z>
    </axis>
  </animation>
  
  <!-- Elevator Trim Indicator -->
  <animation>
    <type>rotate</type>
    <object-name>ElevatorTrimNeedle</object-name>
    <property>/controls/flight/elevator-trim</property>
    <factor>130.0</factor>
    <axis>
      <x>0</x><y>0</y><z>-1</z>
    </axis>    
    <max>-36</max>
    <center>
      <x-m>0.01989</x-m>
      <y-m>0.244</y-m>
      <z-m>-0.105</z-m>
    </center>
  </animation>
  
  <!-- Rudder Trim Indicator -->
  <animation>
    <type>rotate</type>
    <object-name>RudderTrimNeedle</object-name>
    <property>/controls/flight/rudder-trim</property>
    <factor>71</factor>
    <axis>
      <x>0</x><y>0</y><z>-1</z>
    </axis>
    <center>
      <x-m>0.02025</x-m>
      <y-m>0.268</y-m>
      <z-m>-0.105</z-m>
    </center>
  </animation>
  
  <!-- Drift Mode Control -->
  <animation>
    <type>select</type>
    <object-name>DriftModeControlOff</object-name>
    <condition>
      <equals>
        <property>/controls/instrumentation/drift-indicator-mode</property>
        <value>0</value>
      </equals>
    </condition>
  </animation>
  
  <animation>
    <type>select</type>
    <object-name>DriftModeControlStby</object-name>
    <condition>
      <equals>
        <property>/controls/instrumentation/drift-indicator-mode</property>
        <value>1</value>
      </equals>
    </condition>
  </animation>
  
  <animation>
    <type>select</type>
    <object-name>DriftModeControlLand</object-name>
    <condition>
      <equals>
        <property>/controls/instrumentation/drift-indicator-mode</property>
        <value>2</value>
      </equals>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>DriftModeControlSea</object-name>
    <condition>
      <equals>
        <property>/controls/instrumentation/drift-indicator-mode</property>
        <value>3</value>
      </equals>
    </condition>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>DriftModeControlOff</object-name>
    <object-name>DriftModeControlStby</object-name>
    <object-name>DriftModeControlLand</object-name>
    <object-name>DriftModeControlSea</object-name>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>/controls/instrumentation/drift-indicator-mode</property>
        <step>1</step>
        <min>0</min>
        <max>3</max>        
      </binding>
    </action>
    <action>
      <button>1</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>/controls/instrumentation/drift-indicator-mode</property>
        <step>-1</step>
        <min>0</min>
        <max>3</max>        
      </binding>
    </action>
    <action>
      <name>small increase (scrollwheel)</name>
      <button>3</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>/controls/instrumentation/drift-indicator-mode</property>
        <step>1</step>
        <min>0</min>
        <max>3</max>        
      </binding>
    </action>
    <action>
      <name>small decrease (scrollwheel)</name>
      <button>4</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>/controls/instrumentation/drift-indicator-mode</property>
        <step>-1</step>
        <min>0</min>
        <max>3</max>        
      </binding>
    </action>    
  </animation>
  
