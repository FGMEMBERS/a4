<?xml version="1.0"?>
<PropertyList>

 <path>gunsight.ac</path>

 <!-- Transparent Surfaces for Rembrandt rendering -->
 <effect>
   <inherits-from>Effects/model-transparent</inherits-from>
   <object-name>Reflector</object-name>
 </effect>


  <!-- Reflector markings not visible when gunsight switched off -->
<!--
  <animation>
    <type>blend</type>
    <object-name>Reflector</object-name>
    <property>controls/armament/gunsight</property>
    <factor>-1</factor>
    <offset>1</offset>
  </animation>
-->
  <animation>
    <type>materials</type>
    <object-name>Reflector</object-name>
    <property>controls/armament/gunsight</property>
    <emission>
		<red>0.2</red>
		<green>1.0</green>
		<blue>0.2</blue>
		<factor-prop>controls/armament/gunsightlight</factor-prop>
	</emission>
    <ambient>
		<red>0.2</red>
		<green>1.0</green>
		<blue>0.2</blue>
		<factor-prop>controls/armament/gunsightlight</factor-prop>
	</ambient>
  </animation>

  <animation>
   <type>pick</type>
   <object-name>GunsightElevation</object-name>
   <visible>true</visible>
   <action>
     <name>small increase (scrollwheel)</name>
     <button>3</button>
     <repeatable>true</repeatable>
     <binding>
       <command>property-adjust</command>
       <property>controls/armament/gunsight-elevation</property>
       <step>0.05</step>
       <min>0</min>
       <max>1</max>
       <wrap>0</wrap>
     </binding>
   </action>
   <action>
     <name>small decrease (scrollwheel)</name>
     <button>4</button>
     <repeatable>true</repeatable>
     <binding>
       <command>property-adjust</command>
       <property>controls/armament/gunsight-elevation</property>
       <step>-0.05</step>
       <min>0</min>
       <max>1</max>
       <wrap>0</wrap>
     </binding>
   </action>
 </animation>

</PropertyList>


