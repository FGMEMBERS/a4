<?xml version="1.0"?>
<PropertyList>
  <!-- AN/APG-53B radar system -->
  <path>radarscope.ac</path>
 
  <animation>
    <type>material</type>
    <object-name>Vertical10</object-name>
    <condition>
      <and>
        <equals>
          <property>controls/radar/range</property>
          <value>10</value>
        </equals>
        <greater-than>
          <property>controls/radar/mode</property>
          <value>0</value>
        </greater-than>
        <equals>
          <property>controls/radar/orientation</property>
          <value>1</value>
        </equals>
      </and>
    </condition>
    <emission>
     <red>0.2</red>
     <green>1.0</green>
     <blue>0.2</blue>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>Vertical20</object-name>
    <condition>
      <and>
        <equals>
          <property>controls/radar/range</property>
          <value>20</value>
        </equals>
        <greater-than>
          <property>controls/radar/mode</property>
          <value>0</value>
        </greater-than>
        <equals>
          <property>controls/radar/orientation</property>
          <value>1</value>
        </equals>
      </and>
    </condition>
    <emission>
     <red>0.2</red>
     <green>1.0</green>
     <blue>0.2</blue>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>Horizontal10</object-name>
    <condition>
      <and>
        <equals>
          <property>controls/radar/range</property>
          <value>10</value>
        </equals>
        <greater-than>
          <property>controls/radar/mode</property>
          <value>0</value>
        </greater-than>
        <equals>
          <property>controls/radar/orientation</property>
          <value>0</value>
        </equals>
      </and>
    </condition>
    <emission>
     <red>0.2</red>
     <green>1.0</green>
     <blue>0.2</blue>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>Horizontal20</object-name>
    <condition>
      <and>
        <equals>
          <property>controls/radar/range</property>
          <value>20</value>
        </equals>
        <greater-than>
          <property>controls/radar/mode</property>
          <value>0</value>
        </greater-than>
        <equals>
          <property>controls/radar/orientation</property>
          <value>0</value>
        </equals>
      </and>
    </condition>
    <emission>
     <red>0.2</red>
     <green>1.0</green>
     <blue>0.2</blue>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>Horizontal40</object-name>
    <condition>
      <and>
        <equals>
          <property>controls/radar/range</property>
          <value>40</value>
        </equals>
        <greater-than>
          <property>controls/radar/mode</property>
          <value>0</value>
        </greater-than>
        <equals>
          <property>controls/radar/orientation</property>
          <value>0</value>
        </equals>
      </and>
    </condition>
    <emission>
     <red>0.2</red>
     <green>1.0</green>
     <blue>0.2</blue>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>RadarDisplay</object-name>
    <emission>
     <red>0.2</red>
     <green>1.0</green>
     <blue>0.2</blue>
    </emission>
  </animation>  
  
  <!-- Controls -->  
  
  <animation>
    <type>pick</type>
    <object-name>RET</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>controls/radar/reticle-norm</property>
        <step>0.1</step>
        <min>0</min>
        <max>1</max>
        <wrap>1</wrap>
      </binding>
    </action>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>RET</object-name>
    <property>controls/radar/reticle-norm</property>
    <interpolation>
      <entry>
        <ind>0</ind>
        <dep>0</dep>
      </entry>
      <entry>
        <ind>1</ind>
        <dep>270</dep>
      </entry>
    </interpolation>
    <center>
      <x-m> 0.0</x-m>
      <y-m> 0.04502</y-m>
      <z-m> 0.04868</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  
  <animation>
    <type>pick</type>
    <object-name>BRT</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>controls/radar/brightness-norm</property>
        <step>0.1</step>
        <min>0</min>
        <max>1</max>
        <wrap>1</wrap>
      </binding>
    </action>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>BRT</object-name>
    <property>controls/radar/brightness-norm</property>
    <interpolation>
      <entry>
        <ind>0</ind>
        <dep>0</dep>
      </entry>
      <entry>
        <ind>1</ind>
        <dep>270</dep>
      </entry>
    </interpolation>
    <center>
      <x-m> 0.0</x-m>
      <y-m>-0.04725</y-m>
      <z-m> 0.04868</z-m>
    </center>
    <axis>
      <x>-1</x>
      <y> 0</y>
      <z> 0</z>
    </axis>
  </animation>
  
</PropertyList>
