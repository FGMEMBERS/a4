<?xml version="1.0"?>

<PropertyList>

 <path>a4-blue.ac</path>

 <!-- Cool panel toy. -->
 <model>
  <path>Aircraft/a4/Models/attitude.xml</path>
  <offsets>
   <x-m>-3.15</x-m>
   <y-m> 0.0</y-m>
   <z-m> 0.60</z-m>
  </offsets>
 </model>

 <!-- Object Selection -->

 <animation>
  <type>select</type>
  <object-name>Pilot</object-name>
  <condition>
   <not>
   <equals>
    <property>/sim/current-view/y-offset-m</property>
    <value>0.76</value>
   </equals>
   </not>
  </condition>
 </animation>

 <!-- Object Movement -->

 <animation>
  <type>rotate</type>
  <object-name>LeftGear</object-name>
  <property>/gear/gear[1]/position-norm</property>
  <factor>-120</factor>
  <offset-deg>-1</offset-deg>
  <min-deg>0</min-deg>
  <max-deg>90</max-deg>
  <center>
   <x-m>0.76</x-m>
   <y-m>-1.05</y-m>
   <z-m>-0.68</z-m>
  </center>
  <axis>
   <x>0</x>
   <y>1</y>
   <z>0</z>
  </axis>
 </animation>


